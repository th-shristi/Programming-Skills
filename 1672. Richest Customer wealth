class Solution {
public:
    int maximumWealth(vector<vector<int>>& accounts) {
        int maxWealth = 0;
        
        for (const auto& account : accounts) {
            int wealth = 0;
            
            for (const auto& bank : account) {
                wealth += bank;
            }
            
            maxWealth = max(maxWealth, wealth);
        }
        
        return maxWealth;
    }
};
